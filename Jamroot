import testing ;
import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;

exe evocadx-centroid :
    src/centroid.cpp
    src/png.cpp
    /libea//libea_runner
    /boost//filesystem
    /boost//system
    : <link>static ;

run test/test_png.cpp
    src/png.cpp
    /boost//unit_test_framework
    : : : <include>./src
    ;

install dist : 
    evocadx-centroid
    : <location>$(HOME)/bin ;
